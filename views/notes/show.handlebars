<h1 class="display-5 mb-3">{{note.title}}</h1>
<p class="lead">{{note.details}}</p>
<a href="/notes/edit/{{note._id}}" class="btn btn-warning btn-inline float-left mr-5">Edit</a>
<form action="/notes/{{note._id}}?_method=DELETE" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input class="btn btn-danger btn-inline float-left" type="submit" value="Delete">
</form>